<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pharmacy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="닥터약국" />

    <TextView
        android:id="@+id/pharmacy_rating_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5"
        android:textColor="#FF0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_name" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/pharmacy_address"
        app:layout_constraintStart_toEndOf="@+id/pharmacy_rating_num"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_name" />

    <TextView
        android:id="@+id/pharmacy_rating_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(23)"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/pharmacy_rating_num" />

    <TextView
        android:id="@+id/pharmacy_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="238m 경기 성남시 중원구"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_rating_num" />

    <TextView
        android:id="@+id/pharmacy_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="031-1234-5678"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_address" />

</androidx.constraintlayout.widget.ConstraintLayout>